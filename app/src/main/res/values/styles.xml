<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabColor">@color/fab_color_light</item>
        <item name="bottomAppBarColor">@color/bottom_app_bar_light</item>
    </style>

    <style name="AppTheme.Day" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabColor">@color/fab_color_light</item>
        <item name="bottomAppBarColor">@color/bottom_app_bar_light</item>
        <item name="background_main">@color/day_background_color</item>
        <item name="textColor">@color/dark_font_color</item>
        <item name="wikiIconColor">@color/dark_font_color</item>
        <item name="bottomSheetColor">@color/day_bottomsheet_color</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabColor">@color/fab_color_dark</item>
        <item name="bottomAppBarColor">@color/bottom_app_bar_dark</item>
        <item name="background_main">@color/night_background_color</item>
        <item name="android:textColor">@color/light_font_color</item>
        <item name="textColor">@color/light_font_color</item>
        <item name="wikiIconColor">@color/light_font_color</item>
        <item name="bottomSheetColor">@color/night_bottomsheet_color</item>
    </style>

    <style name="AppTheme.Moon" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#6031B3</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabColor">@color/fab_color_dark</item>
        <item name="bottomAppBarColor">@color/bottom_app_bar_dark</item>
        <item name="background_main">@drawable/moon_background</item>
        <item name="android:textColor">@color/light_font_color</item>
        <item name="textColor">@color/light_font_color</item>
        <item name="bottomSheetColor">@color/night_bottomsheet_color</item>
        <item name="wikiIconColor">@color/light_font_color</item>
    </style>

    <style name="AppTheme.Mars" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabColor">@color/fab_color_light</item>
        <item name="bottomAppBarColor">@color/bottom_app_bar_light</item>
        <item name="background_main">@drawable/mars_background</item>
        <item name="textColor">@color/dark_font_color</item>
        <item name="wikiIconColor">@color/dark_font_color</item>
        <item name="bottomSheetColor">@color/day_bottomsheet_color</item>
    </style>


</resources>